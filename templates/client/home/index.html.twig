{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="post">
            <h2 class="post__title"><a href="{{ path('client_post', {slug: post.slug}) }}">{{ post.title }}</a></h2>
            <div class="post__meta">
                <span>{{ post.category }}</span>
            </div>
            <p class="post__description">{{ post.description | raw }}</p>
        </div>
    {% endfor %}
{% endblock %}
