{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts.items %}
        <a class="post-link" target="_blank" href="{{ path('client_post', {slug: post.slug}) }}">
            <div class="post">
                <h2 class="post__title">{{ post.title }}</h2>
                <div class="post__meta">
                    <span><i class="fa-solid fa-folder-open"></i> {{ post.category }}</span>
                    <span><i class="fa-solid fa-clock"></i> {{ post.publicationAt | date('Y-m-d H:i') }}</span>
                </div>
                <p class="post__description">{{ post.description | raw }}</p>
            </div>
        </a>
    {% endfor %}

    {% include 'client/home/_pagination.html.twig' with {'paginator': posts} %}
{% endblock %}
